<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head') %> 

<body class="login">
    <%- include('../partials/header') %>


    <main class="login_main">
      <section class="login_inicio">
        <div class="login_inicio-cuenta"><p> Inicio > Mi cuenta > Login</p></div>
       <div class="login_inica-s"><h1>Iniciá sesión</h1></div>
        <form class="login_form" id="login_form" action="" method="POST">
            
            <div class="login_div">
                <label class="login_label" for="email">Email</label>
                <input class="login_input form-control" type="text" name="email" id="email" placeholder="Ej: tunombre@email.com">
                <span id="msgEmail"></span>
                <% if (locals.errors && errors.email) { %>
                  <p class="login_errors">
                    <%= errors.email.msg %> 
                </p>
                <% } %>
            </div>
            
            <div class="login_div">
                <label class="login_label" for="password">Contraseña</label>
                <input class="login_input form-control" type="password" name="password" id="password" placeholder="Escribe tu contraseña">
                <span id="msgPassword"></span>
                <% if (locals.errors && errors.password) { %>
                  <p class="login_errors">
                    <%= errors.password.msg %> 
                </p>
                <% } %>
            </div>
            <div class="login_div remember">
              <input  type="checkbox" id="recordarme" name="remember">
            <label class="login_label" for="recordarme">Recordarme</label>
            </div>
            <div class="login_olvidaste-contra">
                <p> ¿Olvidaste tu contraseña? </p>
              </div>
            <div class="login_div">
              <button type="submit">Ingresá</button>
            </div>
            <div class="login_p_a">
                <p> ¿No tenés cuenta aún? <a href="/users/register" style="color: blue;">Registrate</a></p>
              </div>
            
        </form>

      </section>
    </main>

    <%- include('../partials/whatsapp') %>  
    
    <%- include('../partials/footer') %> 

    <script src="/Js/login.js"></script>
    <%- include('../partials/script') %>
</body>
</html>