                    <h1>OFERTAS</h1>
                    <div class="glider-contain">
                        <section class="glider">
                            <% oferta.forEach((product,index)=> { %>
                                <article class="index_product">
                                    <div class="index_product_img"><img src="/img/imgProducts/<%=product.image%>"
                                            alt="product"></div>
                                    <hr>
                                    <h3 class="index_product_title">
                                        <%= product.name %>
                                    </h3>

                                    <div class="index_product_bottom">
                                        <p class="precio">$<%= toThousand(product.price) %><em class="decimales">99</em>
                                        </p>
                                        <p class="index_product_envío">Envío Gratis</p>
                                        <a href="/products/productDetail/<%=product.id %>"
                                            class="index_button_product">Ver
                                            más</a>
                                    </div>
                                </article>
                                <% }) %>
                        </section>
                        <button aria-label="Previous" class="glider-prev" style="left: 7px;"><i class="fa-solid fa-chevron-left"></i></button>
                        <button aria-label="Next" class="glider-next" style="right: 7px;"><i class="fa-solid fa-chevron-right"></i></button>

                    </div>


